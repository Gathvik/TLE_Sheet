#include <bits/stdc++.h>
using namespace std;
#define forn(i, a, n) for (long long i = a; i < n; i++)
#define int long long
#define endl '\n'

// const int MAXN = 200100;
// const int MOD = 1000000007;

void solve() {
  int n;
  string s;
  cin >> n >> s;
  bool flag = false;
  int ans = 0;
  forn(i, 0, n) {
    if (s[i] == '.' && i + 1 < n && s[i + 1] == '.' && i + 2 < n && s[i + 2] == '.') {
      flag = true;
      break;
    }
    if (s[i] == '.')
      ans++;
  }
  if (flag)
    cout << 2 << endl;
  else
    cout << ans << endl;
}

int32_t main() {
  ios::sync_with_stdio(false);
  cin.tie(0);
  cout.tie(0);
  int T = 1;
  cin >> T; // Comment this out in case number of test cases are not to be
            // taken as input
  for (int I = 1; I <= T; I++) {
    solve();
  }
  return 0;
}
